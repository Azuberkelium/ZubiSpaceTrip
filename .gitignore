    function startMission(mission) {
        missionsModal.style.display = 'none';
        score = 0;
        finalScoreEl.style.display = 'block';
        lightYearsToGoDisplay.style.display = 'none';
        scoreDisplay.style.display = 'block';
        
        startCountdown(() => {
            startGame(0, mission.time);
        });
